{
  "name": "dayflow-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:shared": "cd ../shared && npm run build",
    "dev": "npm run build:shared && tsx watch src/index.ts",
    "build": "npm install && npm run build:shared && tsc && node scripts/build-deploy.mjs",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "typecheck": "npm run build:shared && tsc --noEmit",
    "db:push": "node scripts/db-push.mjs",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "codegen": "graphql-codegen"
  },
  "dependencies": {
    "dayflow-shared": "file:../shared",
    "@graphql-tools/schema": "^10.0.3",
    "dotenv": "^16.4.5",
    "@prisma/client": "^5.10.0",
    "argon2": "^0.31.2",
    "dataloader": "^2.2.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.23.0",
    "graphql-shield": "^7.6.5",
    "graphql-yoga": "^5.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-resolvers": "^4.0.6",
    "@types/node": "^20.11.19",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "prisma": "^5.10.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.20.0"
  }
}
